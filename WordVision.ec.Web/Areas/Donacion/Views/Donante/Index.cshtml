            startLoading();

        
                var estado = $("#estadoDonante").val();

                var categoria = $("#categoria").val();

                $('#viewAll').load('/Donacion/Donante/LoadAll?estadoDonante=' + estado + '&categoria=' + categoria);
                finishLoading();
            
        }

        $(document).ready(function() {
            //   loadData();
        });
