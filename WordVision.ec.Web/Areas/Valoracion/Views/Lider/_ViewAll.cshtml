@using WordVision.ec.Web.Areas.Valoracion.Models
@model IEnumerable<PlanificacionResultadoViewModel>
<table id="colaboradorTable" class="table table-striped " width="100%" height="100%" cellspacing="0">
    <thead>
        <tr>

            <th data-priority="1">Colaborador</th>
            <th>Estado</th>
            <th>Fecha Cumplimiento</th>
            <th>Porcentaje Cumplimiento</th>
            <th>Ponderación Resultado</th>
            <th data-priority="2">Ver Valoración</th>
           <th data-priority="2">Abrir Valoración</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var colaborador in Model)
        {
        <tr>

            <td>
                @colaborador.NombreColaborador
            </td>
            <td>
                @colaborador.DescEstado
            </td>
            <td>
                @colaborador.FechaCumplimiento
            </td>
             <td>
                @colaborador.PorcentajeCumplimiento
            </td>
             <td>
                @colaborador.PonderacionResultado
            </td>
            <td>
                <a type="button" asp-area="Valoracion" asp-page="/Objetivo/Wizard/Index" asp-route-id="@colaborador.IdColaborador" asp-route-perfil="1" asp-route-anioFiscal="@colaborador.AnioFiscal" class="btn btn-primary"><i class="fas fa-pencil-alt"></i></a>
            </td>
            <td>
                <form id="form_delete_@colaborador.Id" asp-controller="Objetivo" method="post" asp-action="OnPostAbrirValoracion" asp-route-idColaborador="@colaborador.IdColaborador" asp-route-anioFiscal="@colaborador.AnioFiscal"  asp-route-estado="3"  onsubmit="return jQueryModalController(this)" class="d-inline">
                                <a href="javascript:$('#form_delete_@colaborador.Id').submit();" class="dropdown-item"><i class="fa fa-folder-open-o"></i> @localizer["Abrir"]</a>
                </form>
            </td>

        </tr>
        }
    </tbody>
</table>
<script>
   
    $(document).ready(function () {
        var table=  $("#colaboradorTable").DataTable({
            aoColumnDefs: [
                { "aTargets": [0], "bSortable": true },
                { "aTargets": [2], "asSorting": ["asc"], "bSortable": true },
            ],
            "language": {
                "url": "../lib/datatables/language/Spanish.json"
            },
            
            scrollY: '50vh',
            scrollCollapse: true,
            responsive: true,
            columnDefs: [
                { responsivePriority: 1, targets: 0 },
                { responsivePriority: 2, targets: -1 }
            ],
            "info": false
            //columnDefs: [
            //    { responsivePriority: 1, targets: 0 },
            //    { responsivePriority: 10001, targets: 4 },
            //    { responsivePriority: 2, targets: -2 }
            //]
        });

     

    });
</script>
