<table id="@objetivo.Numero"  class="table table-bordered " width="100%" cellspacing="0">
    <thead>
        <tr>

            <th style="background-color:#F9D6BF;" width="30%">Resultado Esperado</th>
            <th data-priority="1" style="background-color:#F9D6BF;" width="20%">Indicador Cumplimiento</th>
            <th data-priority="1" style="background-color:#F9D6BF;" width="5%">Tipo(#,%;$)</th>
            <th data-priority="1" style="background-color:#2ED4E0;" width="5%">Meta</th>
            <th data-priority="1" style="background-color:#2ED4E0;" width="10%">Fecha Inicio</th>
            <th data-priority="1" style="background-color:#2ED4E0;" width="10%">Fecha Fin</th>
            <th data-priority="1" style="background-color:#2ED4E0;" width="10%">Ponderación Objetivo especifico</th>
            <th data-priority="1" style="background-color:#F9D6BF;" width="10%">Ponderación Resultado</th>
          

            <th data-priority="2" class="acciones-th">Acciones</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var planificacion in anio.PlanificacionResultados)
        {
        <tr>
            <td>
                @planificacion.Nombre
            </td>
            <td>
                @planificacion.Indicador
            </td>
            <td>
                
                @switch (planificacion.Tipo)
                {
                    case 13:<span class="badge badge-primary">$</span> break;
                    case 28:<span class="badge badge-warning">%</span> break;
                    case 29:<span class="badge badge-warning">#</span> break;
                }
            </td>
            <td>

                @planificacion.Meta
            </td>
            <td>
               @if (planificacion.FechaInicio!=null)
                {
                                @planificacion.FechaInicio.Value.ToShortDateString();
                            }
               
            </td>
            <td>
                @if (planificacion.FechaFin!=null)
                {
                                @planificacion.FechaFin.Value.ToShortDateString();
                            }
                
            </td>
            <td>
                    @planificacion.Ponderacion
                </td>
            <td style="
      vertical-align: middle;
    
">
            
                   @anio.Ponderacion
                
            </td>
           

            <td class="acciones-td">
           
                <button type="button" class="btn btn-success  btn-xp" data-toggle="tooltip" data-placement="top" title="Editar" btn-xp" id="btnViewModel" onclick="jQueryModalGet('/Valoracion/Objetivo/OnGetCreateOrEdit?id=@planificacion.IdPlanificacion&idColaborador=@User.Claims.FirstOrDefault(x => x.Type == "Id")?.Value&idObjetivo=@objetivo.IdObjetivo&idObjetivoAnioFiscal=@anio.Id&idResultado=@planificacion.IdResultado&anioFiscal=@anio.AnioFiscal','Objetivos')">
                    <i class="fas fa-edit"></i>
                </button>

                @*<button type="button" class="btn btn-primary  btn-xp" title="Agregar" id="btnViewModel" onclick="jQueryModalGet('/Planificacion/IndicadorPOA/OnGetCreateOrEdit?id=0&idProducto=@producto.Id&idGestion=@Model.IdGestion&idIndicadorEstrategia=@Model.Id','Indicador de Producto')">
                <i class="fas fa-plus-square"></i>
            </button>*@
            </td>





