@model IEnumerable<WordVision.ec.Web.Areas.Maestro.Models.ModeloProyectoViewModel>

<table id="ModeloProyectoTable" class="table table-striped" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                Estado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            var idmp = "MP" + @item.Id.ToString();
            <tr id="@idmp">
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado.Nombre)
                </td>
                <td>
                    <div class="btn-group">
                        <button id="idbtnmodeloproyecto" onclick="jQueryModalGet('/Maestro/ModeloProyectoEtapaAccion/OnGetModeloProyectoCreateOrEdit?id=@item.Id','Editar Modelo Proyecto')" class="btn btn-warning btn-xp mr-1" type="button"><i class="fas fa-pencil-alt"></i></button>
                        <button type="button" onclick="EliminaFilaMP(@item.Id)" class="btn btn-danger btn-xp"><i class="fas fa-trash-alt"></i></button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function() {
        $("#ModeloProyectoTable").DataTable({
            "language": {
                "url": "/lib/datatables/language/Spanish.json"
            },
            responsive: true,
            info: true,
            bSort: true,
            aaSorting: [[ 0, "desc" ]],
        });
    });

    function EliminaFilaMP(id) {

        var GestionViewModel = {
            id: id
        };

        $.ajax({
            type: "delete",
            url: '@Url.Action("OnPostModeloProyectoDelete", "ModeloProyectoEtapaAccion", new { area = "maestro" })',
            data: GestionViewModel,
            datatype: "json",
            cache: false,
            success: function(data) {
                if (data.isValid)
                    $("#MP" + id).remove();

            },
            error: function(xhr) {

            }
        });
    }
</script>
