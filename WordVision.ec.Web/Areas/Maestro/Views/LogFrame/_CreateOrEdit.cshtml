@model WordVision.ec.Web.Areas.Maestro.Models.LogFrameViewModel

<form id="create-form" method="post" asp-controller="LogFrame" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input hidden="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-md-6">
            <div class="form-group grupoSeleccion">
                <label asp-for="IdProgramaTecnico" class="control-label">Programa Técnico</label>
                @Html.DropDownList("IdProgramaTecnico", (IEnumerable<SelectListItem>)Model.ProgramaTecnicoList, htmlAttributes: new { @class = "form-control seleccionBusqueda", @style = "width:100%;" })
                <span asp-validation-for="IdProgramaTecnico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutCome" class="control-label"></label>
                <input asp-for="OutCome" class="form-control" />
                <span asp-validation-for="OutCome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OutPut" class="control-label"></label>
                <input asp-for="OutPut" class="form-control" />
                <span asp-validation-for="OutPut" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Activity" class="control-label"></label>
                <input asp-for="Activity" class="form-control" />
                <span asp-validation-for="Activity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdNivel" class="control-label">Nivel</label>
                @Html.DropDownList("IdNivel", (IEnumerable<SelectListItem>)Model.NivelList, htmlAttributes: new { @class = "form-control ", @style = "width:100%;" })
                <span asp-validation-for="IdNivel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdModeloProyecto" class="control-label">Modelo Proyecto</label>
                @Html.DropDownList("IdModeloProyecto", (IEnumerable<SelectListItem>)Model.ModeloProyectoList, htmlAttributes: new { @class = "form-control ", @style = "width:100%;" })
                <span asp-validation-for="IdModeloProyecto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SumaryObjetives" class="control-label">Sumary/Objetives</label>
                <textarea asp-for="SumaryObjetives" class="form-control" rows="2"></textarea>
                <span asp-validation-for="SumaryObjetives" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-6">
            <div id="containerActividad">
                <div class="form-group">
                    <label asp-for="Cobertura" class="control-label">Cobertura</label>
                    <input asp-for="Cobertura" class="form-control" />
                    <span asp-validation-for="Cobertura" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdTipoActividad" class="control-label">TipoActividad</label>
                    @Html.DropDownList("IdTipoActividad", (IEnumerable<SelectListItem>)Model.TipoActividadList, htmlAttributes: new { @class = "form-control ", @style = "width:100%;" })
                    <span asp-validation-for="IdTipoActividad" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdSectorProgramatico" class="control-label">Sector Programatico</label>
                    @Html.DropDownList("IdSectorProgramatico", (IEnumerable<SelectListItem>)Model.SectorProgramaticoList, htmlAttributes: new { @class = "form-control ", @style = "width:100%;" })
                    <span asp-validation-for="IdSectorProgramatico" class="text-danger"></span>
                </div>
            </div>


            @if (Model.Id != 0)
            {
                <div class="form-group">
                    <label asp-for="IdEstado" class="control-label">Estado</label>
                    @Html.DropDownList("IdEstado", (IEnumerable<SelectListItem>)Model.EstadoList, htmlAttributes: new { @class = "form-control ", @style = "width:100%;" })
                    <span asp-validation-for="IdEstado" class="text-danger"></span>
                </div>
            }
        </div>
    </div>

    <br />
    <div class="form-group justify-content-between group-button-modal">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="button" class="btn btn-default close-button" data-dismiss="modal">Cancelar</button>
    </div>
</form>

<script>
    $(document).ready(function () {
        $.validator.unobtrusive.parse(document);
        $('#create-form').disableAutoFill();

        $("#IdNivel").click(function() {

            let nivel = $(this).val();
            MostrarContainers(nivel);

        });

        MostrarContainers($("#IdNivel option:selected").val());

       // $('.seleccionBusqueda').select2();

    });

     function MostrarContainers(nivel)
        {
            $('#containerActividad').hide();
            //$('#containerIndicadores').hide();
            //if(nivel == '4334' || nivel == '4335')
            //{
            //    $('#containerIndicadores').show();
            //}

            if(nivel == '4336')
            {
                $('#containerActividad').show();
            }
        }

</script>

