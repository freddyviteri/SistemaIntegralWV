@model IEnumerable<WordVision.ec.Web.Areas.Maestro.Models.LogFrameViewModel>

<table id="logFrameTable" class="table table-striped" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OutCome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OutPut)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Activity)
            </th>
            <th>
                Nivel
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SumaryObjetives)
            </th>           
            <th>
                Cobertura
            </th>
            <th>
                Tipo Actividad
            </th>
            <th>
                Sector Programatico
            </th>
            <th>
                Rubro/T2
            </th>
            @*<th>
                Indicador
            </th>*@
            <th>
                Estado
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr id="@item.Id">
            <td>
                @Html.DisplayFor(modelItem => item.OutCome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OutPut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Activity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nivel.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SumaryObjetives)
            </td>            
            <td>
                @Html.DisplayFor(modelItem => item.Cobertura)
            </td>
            <td>
                    @{
                        var actividad = item.TipoActividad != null ? @item.TipoActividad.Nombre : "";
                    }
                    @actividad
                
            </td>
            <td>
                    @{
                        var sector = item.SectorProgramatico != null ? @item.SectorProgramatico.Nombre : "";
                    }
                    @sector
                
            </td>
            <td>
                    @{
                        var rubro = item.Rubro != null ? @item.Rubro.Nombre : "";
                    }
                    @rubro
                
            </td>
            @*<td>
                    @{
                        foreach (var ind in item.LogFrameIndicadores)
                        {
                            <label class="control-label">
                                @ind.IndicadorPR.Codigo - @ind.IndicadorPR.Descripcion 
                            </label>
                        }
                    }
                
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.Estado.Nombre)
            </td>
            <td>
                <div class="btn-group">
                    <button onclick="jQueryModalGet('/Maestro/LogFrame/OnGetCreateOrEdit?id=@item.Id','Editar LogFrame')"class="btn btn-warning btn-xp mr-1" type="button"><i class="fas fa-pencil-alt"></i></button> 
                    <button type="button" onclick="EliminaFila(@item.Id)" class="btn btn-danger btn-xp"><i class="fas fa-trash-alt"></i></button>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $("#logFrameTable").DataTable(
        {
            columnDefs: [ {
                "targets": -1,
                "orderable": false
                } ],
            language: {
                "url": "../lib/datatables/language/Spanish.json"
            },
            });
    });

    function EliminaFila(id) {

        var GestionViewModel = {
            id: id
        };

         $.ajax({
            type: "delete",
            url:'@Url.Action("OnPostDelete", "LogFrame", new { area = "maestro" })',
             data: GestionViewModel,
            datatype: "json",
            cache: false,
            success: function (data) {
                if(data.isValid)
                    $("#" + id).remove();

            },
            error: function(xhr) {

            }
        });
    }

</script>
