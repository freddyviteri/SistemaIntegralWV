@model IEnumerable<WordVision.ec.Web.Areas.Maestro.Models.EtapaModeloProyectoViewModel>

<table id="etapaModeloProyectoTable" class="table table-striped" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Etapa)
            </th>
            <th>
                Acción Operativa
            </th>
            <th>
                Estado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr id="@item.Id">
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Etapa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AccionOperativa.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado.Nombre)
                </td>
                <td>
                    <div class="btn-group">
                        <button onclick="jQueryModalGet('/Maestro/EtapaModeloProyecto/OnGetCreateOrEdit?id=@item.Id','Editar Etapa Modelo Proyecto')" class="btn btn-warning btn-xp mr-1" type="button"><i class="fas fa-pencil-alt"></i></button>
                        <button type="button" onclick="EliminaFila(@item.Id)" class="btn btn-danger btn-xp"><i class="fas fa-trash-alt"></i></button>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $("#etapaModeloProyectoTable").DataTable(
            {
                columnDefs: [{
                    "targets": -1,
                    "orderable": false
                }],
                language: {
                    "url": "../lib/datatables/language/Spanish.json"
                },
            });
    });

    function EliminaFila(id) {

        var GestionViewModel = {
            id: id
        };

         $.ajax({
            type: "delete",
            url:'@Url.Action("OnPostDelete", "EtapaModeloProyecto", new { area = "maestro" })',
             data: GestionViewModel,
            datatype: "json",
            cache: false,
            success: function (data) {
                if(data.isValid)
                    $("#" + id).remove();

            },
            error: function(xhr) {

            }
        });
    }
</script>
