@model WordVision.ec.Web.Areas.Maestro.Models.MarcoLogicoViewModel
<div class="row">
    <div class="col-md-12">
        <form asp-action="OnPostCreateOrEdit" method="post" asp-controller="MarcoLogico" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input hidden="hidden" asp-for="Id"/>
            <div class="form-group grupoSeleccion">
                <label asp-for="IdLogFrame" class="control-label">Log Frame</label>
                @Html.DropDownList("IdLogFrame", (IEnumerable<SelectListItem>)Model.LogFrameList, htmlAttributes: new { @class = "form-control seleccionBusqueda", @style = "width:100%;" })
                <span asp-validation-for="IdLogFrame" class="text-danger"></span>
            </div>
            <div class="form-group grupoSeleccion">
                <label asp-for="IdIndicadorML" class="control-label">Indicador</label>
                @Html.DropDownList("IdIndicadorML", (IEnumerable<SelectListItem>)Model.IndicadorMLList, htmlAttributes: new { @class = "form-control seleccionBusqueda", @style = "width:100%;" })
                <span asp-validation-for="IdIndicadorML" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group justify-content-between group-button-modal">
                <button type="submit" class="btn btn-success">Guardar</button>
                <button type="button" class="btn btn-default close-button" data-dismiss="modal">Cancelar</button>
            </div>
        </form>
    </div>
</div>

<script>
    $('.seleccionBusqueda').select2();
</script>
