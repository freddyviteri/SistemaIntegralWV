@*@model IEnumerable<WordVision.ec.Web.Areas.Maestro.Models.RcNinoPatrocinadoViewModel>*@
@using WordVision.ec.Web.Areas.Maestro.Models
@model IEnumerable<RcNinoPatrocinadoViewModel>

<table id="rCPatrocinadoTable" class="table table-striped" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                Programa Área
            </th>
            <th>
                Cédula
            </th>
            <th>
                Código
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comunidad)
            </th>
            <th>
                Genero
            </th>
            <th>
                GrupoEtario
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patrocinado)
            </th>
            <th>
                Estado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProgramaArea.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comunidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrupoEtario.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Patrocinado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado.Nombre)
            </td>
            <td>
               <div class="btn-group">
                    <a onclick="jQueryModalGet('/Maestro/RCNinoPatrocinado/OnGetCreateOrEdit?id=@item.Id','Editar RC Niño Patrocinado')" class="dropdown-item"><i class="fas fa-pencil-alt"></i>  Editar</a> 
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $("#rCPatrocinadoTable").DataTable({
        columnDefs: [ {
            "targets": 10,
            "orderable": false
            } ]
        });
    });
</script>
