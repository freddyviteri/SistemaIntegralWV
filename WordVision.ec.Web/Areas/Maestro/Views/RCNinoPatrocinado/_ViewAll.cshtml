@*@model IEnumerable<WordVision.ec.Web.Areas.Maestro.Models.RcNinoPatrocinadoViewModel>*@
@using WordVision.ec.Web.Areas.Maestro.Models
@model IEnumerable<RcNinoPatrocinadoViewModel>

<table id="rCPatrocinadoTable" class="table table-striped" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                Programa Área
            </th>
            <th>
                Cédula
            </th>
            <th>
                Código
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comunidad)
            </th>
            <th>
                Genero
            </th>
            <th>
                GrupoEtario
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Patrocinado)
            </th>
            <th>
                Estado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr id="@item.Id">
            <td>
                @Html.DisplayFor(modelItem => item.ProgramaArea.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Codigo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comunidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrupoEtario.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Edad)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.Patrocinado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estado.Nombre)
            </td>
            <td>
               <div class="btn-group">
                    <button onclick="jQueryModalGet('/Maestro/RCNinoPatrocinado/OnGetCreateOrEdit?id=@item.Id','Editar RC Niño Patrocinado')" class="btn btn-warning btn-xp mr-1" type="button"><i class="fas fa-pencil-alt"></i></button> 
                    <button type="button" onclick="EliminaFila(@item.Id)" class="btn btn-danger btn-xp"><i class="fas fa-trash-alt"></i></button>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $("#rCPatrocinadoTable").DataTable({
        columnDefs: [ {
            "targets": -1,
            "orderable": false
            } ],
            language: {
                "url": "../lib/datatables/language/Spanish.json"
            },
        });
    });

    function EliminaFila(id) {

        var GestionViewModel = {
            id: id
        };

         $.ajax({
            type: "delete",
            url:'@Url.Action("OnPostDelete", "RCNinoPatrocinado", new { area = "maestro" })',
             data: GestionViewModel,
            datatype: "json",
            cache: false,
            success: function (data) {
                if(data.isValid)
                    $("#" + id).remove();

            },
            error: function(xhr) {

            }
        });
    }
</script>
