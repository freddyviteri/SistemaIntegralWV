        function callChangefunc(combo, val, codigo){

            var parametros = {
                tipoCombo: combo,
                valor: val,
                id: codigo,
            };

            $.ajax({
                type: "get",
                url: '@Url.Action("setDropDrownList", "EParroquia", new { area = "Encuesta" })',
                data: parametros,
