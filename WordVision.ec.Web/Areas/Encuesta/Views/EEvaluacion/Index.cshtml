@model IEnumerable<WordVision.ec.Web.Areas.Encuesta.Models.EEvaluacionViewModel>

@{ ViewBag.Title = "Mediciones";}

<div style="border:solid; border-width:1px; padding:5px;">
    <div class="row">
        <div class="col-md-12">
            <label class="col-md-12 col-form-label texto-pregunta" style="color:#EC7D31">Ingreso de Mediciones</label>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <label class="col-md-12 col-form-label texto-pregunta">
                Cree periodos de tiempo en los cuales va <font style="color:#2ED4E0">a levantar información</font> de los indicadores a medir.
            </label>
        </div>
    </div>
</div>

<br />
 


<div class="card">
    <div class="col-sm-12 card-button-padding">
        <a onclick="jQueryModalGet('/Encuesta/EEvaluacion/OnGetCreateOrEdit','Crear')" class="btn bg-success">
            <i class="fa fa-plus-square"></i> Crear
        </a>

        <a id="reload" onclick="loadData()" class="btn btn-primary text-white">
            <i class="fa fas fa-bolt"></i>
            Refrescar
        </a>
    </div>
</div>

<div id="viewAll" class="card-body card-body-card table-responsive">

</div>
     
@section Scripts
{
    <script src="~/js/site.js"></script>
    <script>
        $(document).ready(function () {
                loadData();
        });
        function loadData() {
            $('#viewAll').load('/Encuesta/EEvaluacion/LoadAll');
        }
    </script>
}
